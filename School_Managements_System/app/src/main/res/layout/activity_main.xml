<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="200dp"
           android:background="@drawable/school"
           />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/graduation"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp"
                    tools:ignore="NotSibling" />

                <TextView
                    android:id="@+id/st_name"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/profile_image"
                    android:text="Dhilipan-XII B"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="@dimen/_18sdp" />


        <GridLayout
            android:layout_marginTop="@dimen/_30sdp"
            android:animateLayoutChanges="true"
            android:background="#50ffffff"
            android:columnCount="2"
            android:rowCount="6"
            android:layout_gravity="center"
            android:alignmentMode="alignMargins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_10sdp"
                android:onClick="HomeWork"
                tools:ignore="OnClick">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/icon_bk"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <ImageView

                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="43dp"
                        android:layout_gravity="center"
                        android:src="@drawable/diary" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="Home Work"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_10sdp"
                android:onClick="Attendance"
                tools:ignore="OnClick">

                <LinearLayout
                    android:background="@color/icon_bk"

                    android:gravity="center"
                    android:padding="@dimen/_16sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:id="@+id/imageView1"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:srcCompat="@drawable/icone" />

                    <TextView
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attendance" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:onClick="food_menu"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_10sdp"
                tools:ignore="OnClick"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/icon_bk"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="@dimen/_16sdp">

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="49dp"
                        android:layout_gravity="center"
                        android:baselineAligned="false"
                        app:srcCompat="@drawable/menu" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:text="Food Menu"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:textStyle="bold" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_10sdp"
                android:onClick="RankCard"

                >

                <LinearLayout
                    android:background="@color/icon_bk"
                    android:gravity="center"
                    android:padding="@dimen/_16sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"

                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:srcCompat="@drawable/rankcard" />

                    <TextView
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rank Card" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_10sdp"
                android:onClick="Noticeboard"
                tools:ignore="OnClick"
                >

                <LinearLayout
                    android:gravity="center"

                    android:padding="@dimen/_16sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="52dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/post" />

                    <TextView
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Noticeboard" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                app:cardElevation="@dimen/_6sdp"
                app:cardCornerRadius="@dimen/_12sdp"
                android:layout_margin="@dimen/_10sdp"
                android:onClick="Gallery"
                tools:ignore="OnClick"

                >

                <LinearLayout
                    android:gravity="center"
                    android:padding="@dimen/_16sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="41dp"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/image" />

                    <TextView
                        android:layout_marginTop="@dimen/_20sdp"
                        android:textColor="#000000"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gallery" />
                </LinearLayout>
            </android.support.v7.widget.CardView>





        </GridLayout>
    </LinearLayout>
</ScrollView>