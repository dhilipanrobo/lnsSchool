<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#08979d"
                android:orientation="vertical">

                <Button
                    android:id="@+id/button"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/soup"
                    android:text="" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_gravity="center"

                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/food"
                    android:text="" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="@dimen/_42sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:layout_gravity="center"

                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/nuggets"
                    android:text="" />
            </LinearLayout>

            <LinearLayout
                android:background="#ffff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Vegetable Soup" />

                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="#08979d"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Rice,Poondu Kulambu,Radish greens stir fry,Carrot stir fry,Curd" />
                <LinearLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="#08979d"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:orientation="horizontal"></LinearLayout>

                <TextView
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="" />

                <TextView
                    android:textColor="#08979d"
                    android:layout_marginRight="@dimen/_15sdp"
                    android:textAlignment="viewEnd"
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=""
                    android:gravity="end" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>